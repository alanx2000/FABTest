<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fabLl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/socialBarRl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:id="@+id/buttonCollectionRl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <FrameLayout
                android:id="@+id/likeFl"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgSocialLike"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:src="@drawable/btn_like" />

                <TextView
                    android:id="@+id/textSocialLike"
                    style="@style/textStyleh8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:gravity="center"
                    android:text="30" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/hateFl"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_below="@id/likeFl">

                <ImageView
                    android:id="@+id/imgSocialHate"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:src="@drawable/btn_unlike" />

                <TextView
                    android:id="@+id/textSocialHate"
                    style="@style/textStyleh8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:gravity="center"
                    android:text="20" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/commentFl"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_below="@id/hateFl">

                <ImageView
                    android:id="@+id/imgSocialComment"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:src="@drawable/btn_comment" />

                <TextView
                    android:id="@+id/textSocialComment"
                    style="@style/textStyleh8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:gravity="center"
                    android:text="10" />
            </FrameLayout>

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/socialFl"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgSocialButton"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/btn_social" />

        </FrameLayout>

    </RelativeLayout>

</LinearLayout>